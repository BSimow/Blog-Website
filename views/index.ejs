<%- include('partials/header') %>
<div class="container">
	<h1><%= title %></h1>
	<p><%= content %></p>

	<% posts.forEach(function(post){%>
	<div class="item">
		<h2><%= post.title %></h2>
		<p>
			<%= post.content.substring(0,100) +"..." %>

			<a href="/posts/<%= post.title %>">Read More</a>
		</p>
	</div>
	<% });%>
</div>
<%- include('partials/footer') %>
