<%- include('partials/header') %>
<div class="container">
	<h1><%= title %></h1>
	<p><%= content %></p>

	<% posts.forEach(function(post){%>
	<div class="item">
		<h2><%= post.title %></h2>
		<p>
			<%= post.content.substring(0,100) +"..." %>

			<a href="/posts/<%= post._id %>">Read More</a>
		</p>
	</div>
	<% });%>
	<div>
		<a href="/compose">
			<button class="btnPlus"><i class="fa fa-plus"></i></button>
		</a>
	</div>
</div>
<%- include('partials/footer') %>
